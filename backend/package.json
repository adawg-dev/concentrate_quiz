{
  "name": "quiz-backend",
  "version": "1.0.0",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon",
  "build": "tsc",
  "test": "npm run build && jest --config jest.config.cjs",
  "test:watch": "npm run build && jest --watch --config jest.config.cjs"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "cors": "^2.8.5",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/pg": "^8.10.2",
    "@types/cors": "^2.8.13",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^2.0.16",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "supertest": "^7.0.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1"
  }
}